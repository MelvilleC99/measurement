{
  "compilerOptions": {
    "target": "es6", // Updated from "es5" to "es6" for Firestore v9 compatibility
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true, // Set to false if not using JavaScript files
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Set to false if you need TypeScript to emit output files
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
